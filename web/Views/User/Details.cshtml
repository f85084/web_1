@model Library.User

<h2>帳戶資訊</h2>
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <tr>
        <td>
            @Html.LabelFor(model => model.Id, "會員編號", new { htmlAttributes = new { @class = "form-control" } })
        </td>
        <td>
            @Html.LabelFor(model => model.UserAccount, "會員帳號", new { htmlAttributes = new { @class = "form-control" } })
        </td>
        <td>
            @Html.LabelFor(model => model.UserClass, "會員身分", new { htmlAttributes = new { @class = "form-control" } })
        </td>
        <td>
            @Html.LabelFor(model => model.Email, "會員信箱", new { htmlAttributes = new { @class = "form-control" } })
        </td>
        <td>
            @Html.LabelFor(model => model.UserName, "會員名稱", new { htmlAttributes = new { @class = "form-control" } })
        </td>
    </tr>
</div>
<div class="col-sm-9">
    <button type="button" class="btn btn-primary btn-sm " style="margin-top: 10px;margin-bottom: 10px;" value="回到帳戶清單頁面" onclick="location.href='@Url.Action("Index", "User")'">回到帳戶清單頁面</button>
</div>
