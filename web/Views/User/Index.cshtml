@using Library;
@model IEnumerable<Library.User>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="row">
    <div class="table-responsive">
        <div class="col-sm-9">
            <h5> @Html.ActionLink("建立新的會員", "Create")</h5>
            <button type="button" class="btn btn-primary btn-sm">Small button</button>
        </div>
        <table class="table table-striped table-sm">
            <tr>
                <th>
                    @Html.Label("UserClass", "會員編號")
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.Label("UserClass", "會員類別")
                    @Html.DisplayNameFor(model => model.UserAccount)
                </th>
                <th>
                    @Html.Label("UserClass", "會員信箱")
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.Label("UserClass", "會員姓名")
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
            </tr>

        @foreach (User item in Model)
            {
            using (Html.BeginForm("Delete", "User", new { id = item.Id }))
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserAccount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>

                        <input type="button" value="編輯" onclick="location.href='@Url.Action("Edit", "User", new{ id = item.Id })'" />
                        <input type="button" value="明細" onclick="location.href='@Url.Action("Details", "User", new{ id = item.Id })'" />
                        <input type="submit" value="刪除"
                                onclick="return confirm('確定要刪除嗎? Id = @item.Id , Name = @item.UserAccount');" />
                    </td>
                </tr>
                }
            }
            </table>
        </div>
    </div>
