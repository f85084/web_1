@using Library;
@model IEnumerable<Library.Message>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="row">
    <div class="table-responsive">
        <div class="col-sm-9">
            @*@Html.ActionLink("建立新的留言", "Create")*@
            <button type="button" class="btn btn-primary btn-sm" value="建立新的留言" onclick="location.href='@Url.Action("Create", "Message")'">建立新的留言</button>
        </div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                    @Html.Label("會員編號", "會員編號")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Context)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatDate)
                </th>
                <th></th>
            </tr>

            @foreach (Message item in Model)
            {
                using (Html.BeginForm("Delete", "Message", new { id = item.Id }))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Context)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatDate)
                        </td>
                        <td>

                            <input type="button" value="編輯" onclick="location.href='@Url.Action("Edit", "User", new{ id = item.Id })'" />
                            <input type="button" value="明細" onclick="location.href='@Url.Action("Details", "User", new{ id = item.Id })'" />
                            <input type="submit" value="刪除"
                                   onclick="return confirm('確定要刪除嗎? Id = @item.Id , Name = @item.UserId');" />
                        </td>
                    </tr>
                }
            }


        </table>
    </div>
</div>